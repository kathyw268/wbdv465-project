- model_class = Item
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @item.name
%p
  %strong= model_class.human_attribute_name(:condition) + ':'
  %br
  = @item.condition
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @item.description
%p
  %strong= model_class.human_attribute_name(:users_id) + ':'
  %br
  = @item.user.email if @item.user

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), items_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_item_path(@item), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), item_path(@item), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
