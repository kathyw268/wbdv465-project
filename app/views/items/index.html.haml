- model_class = Item
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr

      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:picture)
      %th= model_class.human_attribute_name(:condition)
      %th= model_class.human_attribute_name(:description)
      %th= model_class.human_attribute_name(:users_id)
  %tbody
    - @items.each do |item|
      %tr
        %td= link_to item.name, item_path(item)
        %td= image_tag item.picture.url 
        %td= item.condition
        %td= item.description
        %td= item.user.email if item.user

        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_item_path(item), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), item_path(item), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_item_path, :class => 'btn btn-primary'
